{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}"
  },

  "hyprland/window": {
    "separate-outputs": true
  },

  "tray": {
    "spacing": 10
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  "custom/appmenu": {
    "format": "Apps",
    "on-click": "wofi --show drun",
    "tooltip": false
  },

  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "",
    "on-click": "helvum",
    "scroll-step": 2,
    "format-icons": ["", "", ""]
  },

  "wlr/taskbar": {
	  "format": "{icon}",
	  "icon-size": 14,
	  "icon-theme": "Numix-Circle",
	  "tooltip-format": "{title}",
	  "on-click": "activate",
	  "on-click-middle": "close",
    "all-outputs": false
  }

}
